<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.
chan get_hammer, put_hammer, get_mallet, put_mallet;</declaration>
	<template>
		<name>Hammer</name>
		<location id="id0" x="0" y="0">
			<name x="-10" y="-34">free</name>
		</location>
		<location id="id1" x="136" y="0">
			<name x="119" y="-34">taken</name>
		</location>
		<init ref="id0"/>
		<transition>
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="25" y="42">put_hammer?</label>
			<nail x="136" y="68"/>
			<nail x="0" y="68"/>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="25" y="-25">get_hammer?</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Jobber</name>
		<declaration>// Place local declarations here.</declaration>
		<location id="id2" x="0" y="0">
			<name x="-51" y="-17">begin</name>
		</location>
		<location id="id3" x="102" y="-102">
			<name x="92" y="-136">easy</name>
		</location>
		<location id="id4" x="102" y="0">
			<name x="92" y="-34">average</name>
		</location>
		<location id="id5" x="102" y="102">
			<name x="92" y="68">hard</name>
		</location>
		<location id="id6" x="238" y="-102">
			<name x="246" y="-136">work_easy</name>
		</location>
		<location id="id7" x="238" y="-34">
			<name x="255" y="-59">work_av_mallet</name>
		</location>
		<location id="id8" x="238" y="34">
			<name x="255" y="8">work_av_hammer</name>
		</location>
		<location id="id9" x="238" y="102">
			<name x="255" y="76">work_hard</name>
		</location>
		<init ref="id2"/>
		<transition>
			<source ref="id9"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="272" y="102">put_hammer!</label>
			<nail x="374" y="102"/>
			<nail x="374" y="-170"/>
			<nail x="0" y="-170"/>
		</transition>
		<transition>
			<source ref="id8"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="272" y="34">put_hammer!</label>
			<nail x="374" y="34"/>
			<nail x="374" y="-170"/>
			<nail x="0" y="-170"/>
		</transition>
		<transition>
			<source ref="id7"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="272" y="-34">put_mallet!</label>
			<nail x="374" y="-34"/>
			<nail x="374" y="-170"/>
			<nail x="0" y="-170"/>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id2"/>
			<nail x="238" y="-170"/>
			<nail x="0" y="-170"/>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="127" y="102">get_hammer!</label>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id8"/>
			<label kind="synchronisation" x="136" y="34">get_hammer!</label>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id7"/>
			<label kind="synchronisation" x="153" y="-59">get_mallet!</label>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id6"/>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id5"/>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id4"/>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id3"/>
		</transition>
	</template>
	<template>
		<name>Mallet</name>
		<location id="id10" x="0" y="0">
			<name x="-10" y="-34">free</name>
		</location>
		<location id="id11" x="136" y="0">
			<name x="126" y="-34">taken</name>
		</location>
		<init ref="id10"/>
		<transition>
			<source ref="id11"/>
			<target ref="id10"/>
			<label kind="synchronisation" x="34" y="42">put_mallet?</label>
			<nail x="136" y="68"/>
			<nail x="0" y="68"/>
		</transition>
		<transition>
			<source ref="id10"/>
			<target ref="id11"/>
			<label kind="synchronisation" x="34" y="-25">get_mallet?</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
Jobber1 = Jobber();
Jobber2 = Jobber();

// List one or more processes to be composed into a system.
system Jobber1, Jobber2, Hammer, Mallet;
</system>
	<queries>
		<query>
			<formula>E&lt;&gt; Jobber1.work_av_mallet &amp;&amp; Jobber2.work_av_hammer</formula>
			<comment></comment>
		</query>
		<query>
			<formula>E&lt;&gt; Jobber1.work_av_mallet &amp;&amp; Jobber2.work_av_mallet</formula>
			<comment></comment>
		</query>
		<query>
			<formula>E&lt;&gt; Jobber1.work_av_hammer &amp;&amp; Jobber2.work_av_hammer</formula>
			<comment></comment>
		</query>
		<query>
			<formula>A[] Mallet.taken == (Jobber1.work_av_mallet || Jobber2.work_av_mallet)</formula>
			<comment></comment>
		</query>
		<query>
			<formula>A[] not deadlock</formula>
			<comment></comment>
		</query>
	</queries>
</nta>
